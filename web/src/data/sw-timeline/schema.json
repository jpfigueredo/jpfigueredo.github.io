{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "SW Timeline Dataset",
  "type": "object",
  "required": ["nodes", "edges"],
  "properties": {
    "nodes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "type", "label", "date"],
        "properties": {
          "id": { "type": "string" },
          "type": { "type": "string", "enum": ["person", "work", "paradigm", "event", "technology"] },
          "label": { "type": "string" },
          "date": { "type": "string", "description": "ISO-8601 date or year (YYYY or YYYY-MM-DD)" },
          "endDate": { "type": "string" },
          "authors": { "type": "array", "items": { "type": "string" } },
          "sources": { "type": "array", "items": { "type": "string" } },
          "tags": { "type": "array", "items": { "type": "string" } },
          "summary": { "type": "string" }
        }
      }
    },
    "edges": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["from", "to", "relation"],
        "properties": {
          "from": { "type": "string" },
          "to": { "type": "string" },
          "relation": { "type": "string", "enum": ["influences", "cites", "derives-from", "precedes", "contradicts", "synthesizes"] },
          "weight": { "type": "number", "minimum": 0, "maximum": 1 },
          "evidence": { "type": "array", "items": { "type": "string" } },
          "note": { "type": "string" }
        }
      }
    }
  }
}
